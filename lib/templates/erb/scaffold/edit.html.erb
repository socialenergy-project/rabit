  <div class="col-lg-8">
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-area-chart"></i>
        <%= singular_table_name %> properties
      </div>
      <div class="card-body">
        <%%= render 'form', <%= singular_table_name %>: @<%= singular_table_name %> %>

        <%%= link_to 'Show', @<%= singular_table_name %>, class: 'btn btn-info btn-sm' %> |
        <%%= link_to 'All <%= plural_table_name.titleize %>', <%= index_helper %>_path, class: 'btn btn-info btn-sm' %>
      </div>
      <div class="card-footer small text-muted">
      </div>
    </div>
  </div>
</div>
