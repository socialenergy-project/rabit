<%= content_for :title, 'User Clustering Scenarios' %>

<div class="row">
  <div class="col-lg-12">
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-area-chart"></i>
        All User Clustering Scenarios
      </div>
      <div class="card-body">
        <table class="table table-responsive table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th><%= sortable "name", "Name" -%></th>
            <th><%= sortable "kappa", "Kappa" -%></th>
            <th><%= sortable "silhouette", "Silhouette" -%></th>
            <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
          <% @user_clustering_scenarios.each do |user_clustering_scenario| %>
          <tr>
            <td>
                <%= user_clustering_scenario.name-%>
            </td>
            <td>
                <%= user_clustering_scenario.kappa-%>
            </td>
            <td>
                <%= user_clustering_scenario.silhouette-%>
            </td>
            <td><%= link_to 'Show', user_clustering_scenario, class: 'btn btn-info btn-sm' if can? :show, user_clustering_scenario%></td>
            <td><%= link_to 'Edit', edit_user_clustering_scenario_path(user_clustering_scenario), class: 'btn btn-warning btn-sm' if can? :update, user_clustering_scenario %></td>
            <td><%= link_to 'Destroy', user_clustering_scenario, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' if can? :destroy, user_clustering_scenario %></td>
          </tr>
          <% end %>
          </tbody>
        </table>
        <%= will_paginate @collection, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
        <br>
        <%= link_to 'New User Clustering Scenario', new_user_clustering_scenario_path, class: 'btn btn-primary btn-sm' if can? :create, UserClusteringScenario %>
      </div>
      <div class="card-footer small text-muted">
      </div>
    </div>
  </div>
</div>


