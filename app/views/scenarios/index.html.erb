<%= content_for :title, 'Scenarios' %>

<div class="row">
  <div class="col-lg-12">
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-area-chart"></i>
        All Scenarios
      </div>
      <div class="card-body">
        <table class="table table-responsive table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th><%= sortable "name", "Name" -%></th>
            <th><%= sortable "user_id", "User" -%></th>
            <th><%= sortable "description", "Description" -%></th>
            <th><%= sortable "starttime", "Starttime" -%></th>
            <th><%= sortable "endtime", "Endtime" -%></th>
            <th><%= sortable "interval_id", "Interval" -%></th>
            <th><%= sortable "ecc_type_id", "Ecc type" -%></th>
            <th><%= sortable "energy_cost_parameter", "Energy cost parameter" -%></th>
            <th><%= sortable "profit_margin_parameter", "Profit margin parameter" -%></th>
            <th><%= sortable "flexibility_factor", "Flexibility factor" -%></th>
            <th><%= sortable "number_of_clusters", "Number of clusters" -%></th>
            <th><%= sortable "gamma_parameter", "Gamma parameter" -%></th>
            <th><%= sortable "created_at", "Created at" -%></th>
            <th><%= sortable "updated_at", "Updated at" -%></th>
            <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
          <% @scenarios.each do |scenario| %>
              <tr>
                <td>
                  <%= scenario.name -%>
                </td>
                <td>
                  <%= scenario.user&.name -%>
                </td>
                <td>
                  <%= scenario.description -%>
                </td>
                <td>
                  <%= scenario.starttime -%>
                </td>
                <td>
                  <%= scenario.endtime -%>
                </td>
                <td>
                  <%= link_to scenario.interval&.name, interval_path(scenario.interval) if scenario.interval -%>
                </td>
                <td>
                  <%= link_to scenario.ecc_type&.name, ecc_type_path(scenario.ecc_type) if scenario.ecc_type -%>
                </td>
                <td>
                  <%= scenario.energy_cost_parameter -%>
                </td>
                <td>
                  <%= scenario.profit_margin_parameter -%>
                </td>
                <td>
                  <%= link_to scenario.flexibility&.name, flexibility_path(scenario.flexibility) if scenario.flexibility -%>
                </td>
                <td>
                  <%= scenario.number_of_clusters -%>
                </td>
                <td>
                  <%= scenario.gamma_parameter -%>
                </td>
                <td>
                  <%= scenario.created_at -%>
                </td>
                <td>
                  <%= scenario.updated_at -%>
                </td>
                <td><%= link_to 'Show', scenario, class: 'btn btn-info btn-sm' if can? :show, scenario %></td>
                <td><%= link_to 'Edit', edit_scenario_path(scenario), class: 'btn btn-warning btn-sm' if can? :update, scenario %></td>
                <td><%= link_to 'Destroy', scenario, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-sm' if can? :destroy, scenario %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
        <%= will_paginate @collection, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
        <br>
        <%= link_to 'New Scenario', new_scenario_path, class: 'btn btn-primary btn-sm' if can? :create, Scenario %>
      </div>
      <div class="card-footer small text-muted">
      </div>
    </div>
  </div>
</div>


