<%= content_for :title, 'Dr Plan Actions' %>

<div class="row">
  <div class="col-lg-12">
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-area-chart"></i>
        All Dr Plan Actions
      </div>
      <div class="card-body">
        <table class="table table-responsive table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th><%= sortable "dr_target_id", "Dr target" -%></th>
            <th><%= sortable "consumer_id", "Consumer" -%></th>
            <th><%= sortable "volume_planned", "Volume planned" -%></th>
            <th><%= sortable "price_per_mw", "Price per mw" -%></th>
            <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
          <% @dr_plan_actions.each do |dr_plan_action| %>
          <tr>
            <td>
                <%= link_to dr_plan_action.dr_target&.name, dr_target_path(dr_plan_action.dr_target) if dr_plan_action.dr_target -%>
            </td>
            <td>
                <%= link_to dr_plan_action.consumer&.name, consumer_path(dr_plan_action.consumer) if dr_plan_action.consumer -%>
            </td>
            <td>
                <%= dr_plan_action.volume_planned-%>
            </td>
            <td>
                <%= dr_plan_action.price_per_mw-%>
            </td>
            <td><%= link_to 'Show', dr_plan_action, class: 'btn btn-info btn-sm' if can? :show, dr_plan_action%></td>
            <td><%= link_to 'Edit', edit_dr_plan_action_path(dr_plan_action), class: 'btn btn-warning btn-sm' if can? :update, dr_plan_action %></td>
            <td><%= link_to 'Destroy', dr_plan_action, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' if can? :destroy, dr_plan_action %></td>
          </tr>
          <% end %>
          </tbody>
        </table>
        <%= will_paginate @collection, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
        <br>
        <%= link_to 'New Dr Plan Action', new_dr_plan_action_path, class: 'btn btn-primary btn-sm' if can? :create, DrPlanAction %>
      </div>
      <div class="card-footer small text-muted">
      </div>
    </div>
  </div>
</div>


