<%= content_for :title, "#{@dr_plan_action.dr_target&.dr_event&.name} - #{@dr_plan_action.consumer&.name}" -%>

<div class="row">
  <div class="col-lg-12">
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-area-chart"></i>
        dr_plan_action properties
      </div>
      <div class="card-body">
        <p>
          <strong>Dr target:</strong>
          <%= link_to @dr_plan_action.dr_target&.dr_event&.name, dr_event_path(@dr_plan_action.dr_target&.dr_event) if @dr_plan_action.dr_target -%>
        </p>
        <p>
          <strong>Consumer:</strong>
          <%= link_to @dr_plan_action.consumer&.name, consumer_path(@dr_plan_action.consumer) if @dr_plan_action.consumer -%>
        </p>
        <p>
          <strong>Volume planned:</strong>
          <%= @dr_plan_action.volume_planned-%>
        </p>
        <p>
          <strong>Price per mw:</strong>
          <%= @dr_plan_action.price_per_mw-%>
        </p>

        <%= link_to 'Edit', edit_dr_plan_action_path(@dr_plan_action), class: 'btn btn-warning btn-sm' if can? :edit, @dr_plan_action %> |
        <%= link_to 'All Dr Plan Actions', dr_plan_actions_path, class: 'btn btn-info btn-sm' %>

      </div>
      <div class="card-footer small text-muted">
      </div>
    </div>
  </div>
</div>

