<%= content_for :title, 'Clusterings' %>

<div class="row">
  <div class="col-lg-12">
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-area-chart"></i>
        All Clusterings
      </div>
      <div class="card-body">
        <table class="table table-responsive table-striped table-bordered table-hover">
          <thead>
          <tr>
            
            <th><%= sortable "name", "Name" %></th>
            
            <th><%= sortable "description", "Description" %></th>
                        <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @clusterings.each do |clustering| %>
          <tr>
                        <td>
              
                <%= clustering.name-%>
              
            </td>
                        <td>
              
                <%= clustering.description-%>
              
            </td>
                        <td><%= link_to 'Show', clustering_path(clustering, clustering.initDates), class: 'btn btn-info btn-sm' if can? :show, clustering%></td>
            <td><%= link_to 'Edit', edit_clustering_path(clustering), class: 'btn btn-warning btn-sm' if can? :update, clustering %></td>
            <td><%= link_to 'Destroy', clustering, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' if can? :destroy, clustering %></td>
          </tr>
          <% end %>
          </tbody>
        </table>
        <%= will_paginate @collection, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
        <br>
        <%= link_to 'New Clustering', new_clustering_path, class: 'btn btn-primary btn-sm' if can? :create, Clustering %>
      </div>
      <div class="card-footer small text-muted">
      </div>
    </div>
  </div>
</div>


