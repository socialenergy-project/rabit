<%= form_with(model: data_point, local: true) do |form| %>
  <% if data_point.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(data_point.errors.count, "error") %> prohibited this data_point from being saved:</h2>

      <ul>
      <% data_point.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :consumer_id, class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
       <%= form.collection_select :consumer_id, Consumer.order(name: :asc), :id, :name, { prompt: true }, class: "form-control custom-select", id: 'data_point_consumer_id'  %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :interval_id, class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
       <%= form.collection_select :interval_id, Interval.order(duration: :asc), :id, :name, { prompt: true }, class: "form-control custom-select", id: 'data_point_interval_id'  %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :timestamp, class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= form.text_field :timestamp, value: format_datetime(@data_point.timestamp), id: :data_point_timestamp, class: "form-control datetimepicker" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :consumption, class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= form.text_field :consumption, id: :data_point_consumption, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :flexibility, class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= form.text_field :flexibility, id: :data_point_flexibility, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary btn-sm" %>
  </div>
<% end %>
