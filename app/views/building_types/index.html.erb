<%= content_for :title, 'Building Types' %>

<div class="row">
  <div class="col-lg-12">
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-area-chart"></i>
        All Building Types
      </div>
      <div class="card-body">
        <table class="table table-responsive table-striped table-bordered table-hover">
          <thead>
          <tr>
            
            <th><%= sortable "name", "Name" %></th>
                        <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @building_types.each do |building_type| %>
          <tr>
                        <td>
              
                <%= building_type.name-%>
              
            </td>
                        <td><%= link_to 'Show', building_type, class: 'btn btn-info btn-sm' if can? :show, building_type%></td>
            <td><%= link_to 'Edit', edit_building_type_path(building_type), class: 'btn btn-warning btn-sm' if can? :update, building_type %></td>
            <td><%= link_to 'Destroy', building_type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' if can? :destroy, building_type %></td>
          </tr>
          <% end %>
          </tbody>
        </table>
        <%= will_paginate @collection, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
        <br>
        <%= link_to 'New Building Type', new_building_type_path, class: 'btn btn-primary btn-sm' if can? :create, BuildingType %>
      </div>
      <div class="card-footer small text-muted">
      </div>
    </div>
  </div>
</div>


