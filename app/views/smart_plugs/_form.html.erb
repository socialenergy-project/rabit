<%= form_with(model: smart_plug, local: true) do |form| %>
  <% if smart_plug.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(smart_plug.errors.count, "error") %> prohibited this smart_plug from being saved:</h2>

      <ul>
      <% smart_plug.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :consumer_id, class: "col-sm-3 col-form-label" %>
