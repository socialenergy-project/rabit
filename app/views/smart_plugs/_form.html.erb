       <%= form.collection_select :consumer_id, Consumer.all, :id, :name, { prompt: true }, class: "form-control custom-select", id: 'smart_plug_consumer_id'  %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :name, class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= form.text_field :name, id: :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :mqtt_name, class: "col-sm-3 col-form-label" %>
    <div class="col-sm-9">
      <%= form.text_field :mqtt_name, id: :mqtt_name, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary btn-sm" %>
  </div>
<% end %>
