<%= content_for :title, 'Smart Plugs' %>

<div class="row">
  <div class="col-lg-12">
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-area-chart"></i>
        All Smart Plugs
      </div>
      <div class="card-body">
        <table class="table table-responsive table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th><%= sortable "consumer_id", "Consumer" -%></th>
            <th><%= sortable "name", "Name" -%></th>
            <th><%= sortable "mqtt_name", "Mqtt name" -%></th>
            <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
          <% @smart_plugs.each do |smart_plug| %>
          <tr>
            <td>
                <%= link_to smart_plug.consumer&.name, consumer_path(smart_plug.consumer) if smart_plug.consumer -%>
            </td>
            <td>
                <%= smart_plug.name-%>
            </td>
            <td>
                <%= smart_plug.mqtt_name-%>
            </td>
            <td><%= link_to 'Show', smart_plug, class: 'btn btn-info btn-sm' if can? :show, smart_plug%></td>
            <td><%= link_to 'Edit', edit_smart_plug_path(smart_plug), class: 'btn btn-warning btn-sm' if can? :update, smart_plug %></td>
            <td><%= link_to 'Destroy', smart_plug, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' if can? :destroy, smart_plug %></td>
          </tr>
          <% end %>
          </tbody>
        </table>
        <%= will_paginate @collection, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
        <br>
        <%= link_to 'New Smart Plug', new_smart_plug_path, class: 'btn btn-primary btn-sm' if can? :create, SmartPlug %>
      </div>
      <div class="card-footer small text-muted">
      </div>
    </div>
  </div>
</div>


