<%= content_for :title, 'Communities' %>

<div class="row">
  <div class="col-lg-12">
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-area-chart"></i>
        All Communities
      </div>
      <div class="card-body">
        <table class="table table-responsive table-striped table-bordered table-hover">
          <thead>
          <tr>
            
            <th><%= sortable "name", "Name" %></th>
            
            <th><%= sortable "description", "Description" %></th>
            
            <th><%= sortable "clustering_id", "Clustering" %></th>
                        <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @communities.each do |community| %>
          <tr>
                        <td>
              
                <%= community.name-%>
              
            </td>
                        <td>
              
                <%= community.description-%>
              
            </td>
                        <td>
              
                <%= link_to community.clustering&.name, clustering_path(community.clustering) if community.clustering -%>
              
            </td>
                        <td><%= link_to 'Show', community, class: 'btn btn-info btn-sm' if can? :show, community%></td>
            <td><%= link_to 'Edit', edit_community_path(community), class: 'btn btn-warning btn-sm' if can? :update, community %></td>
            <td><%= link_to 'Destroy', community, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' if can? :destroy, community %></td>
          </tr>
          <% end %>
          </tbody>
        </table>
        <%= will_paginate @collection, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
        <br>
        <%= link_to 'New Community', new_community_path, class: 'btn btn-primary btn-sm' if can? :create, Community %>
      </div>
      <div class="card-footer small text-muted">
      </div>
    </div>
  </div>
</div>


