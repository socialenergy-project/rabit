<%= content_for :title, @energy_program.name || @energy_program.id -%>

<div class="row">
  <div class="col-lg-12">
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-area-chart"></i>
        energy_program properties
      </div>
      <div class="card-body">
        <p>
          <strong>Name:</strong>
          <%= @energy_program.name -%>
        </p>

        <%= link_to 'Edit', edit_energy_program_path(@energy_program), class: 'btn btn-warning btn-sm' if can? :edit, @energy_program %>
        |
        <%= link_to 'All Energy Programs', energy_programs_path, class: 'btn btn-info btn-sm' %>

      </div>
      <div class="card-footer small text-muted">
      </div>
    </div>
  </div>
</div>

