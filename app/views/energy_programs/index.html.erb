<%= content_for :title, 'Energy Programs' %>

<div class="row">
  <div class="col-lg-12">
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-area-chart"></i>
        All Energy Programs
      </div>
      <div class="card-body">
        <table class="table table-responsive table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th><%= sortable "name", "Name" -%></th>
            <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
          <% @energy_programs.each do |energy_program| %>
              <tr>
                <td>
                  <%= energy_program.name -%>
                </td>
                <td><%= link_to 'Show', energy_program, class: 'btn btn-info btn-sm' if can? :show, energy_program %></td>
                <td><%= link_to 'Edit', edit_energy_program_path(energy_program), class: 'btn btn-warning btn-sm' if can? :update, energy_program %></td>
                <td><%= link_to 'Destroy', energy_program, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-sm' if can? :destroy, energy_program %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
        <%= will_paginate @collection, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
        <br>
        <%= link_to 'New Energy Program', new_energy_program_path, class: 'btn btn-primary btn-sm' if can? :create, EnergyProgram %>
      </div>
      <div class="card-footer small text-muted">
      </div>
    </div>
  </div>
</div>


