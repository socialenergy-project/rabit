<%= content_for :title, 'Connection Types' %>

<div class="row">
  <div class="col-lg-12">
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-area-chart"></i>
        All Connection Types
      </div>
      <div class="card-body">
        <table class="table table-responsive table-striped table-bordered table-hover">
          <thead>
          <tr>
            
            <th><%= sortable "name", "Name" %></th>
                        <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @connection_types.each do |connection_type| %>
          <tr>
                        <td>
              
                <%= connection_type.name-%>
              
            </td>
                        <td><%= link_to 'Show', connection_type, class: 'btn btn-info btn-sm' if can? :show, connection_type%></td>
            <td><%= link_to 'Edit', edit_connection_type_path(connection_type), class: 'btn btn-warning btn-sm' if can? :update, connection_type %></td>
            <td><%= link_to 'Destroy', connection_type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' if can? :destroy, connection_type %></td>
          </tr>
          <% end %>
          </tbody>
        </table>
        <%= will_paginate @collection, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
        <br>
        <%= link_to 'New Connection Type', new_connection_type_path, class: 'btn btn-primary btn-sm' if can? :create, ConnectionType %>
      </div>
      <div class="card-footer small text-muted">
      </div>
    </div>
  </div>
</div>


