<%= content_for :title, 'Flexibilities' %>

<div class="row">
  <div class="col-lg-12">
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-area-chart"></i>
        All Flexibilities
      </div>
      <div class="card-body">
        <table class="table table-responsive table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th><%= sortable "name", "Name" -%></th>
            <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
          <% @flexibilities.each do |flexibility| %>
          <tr>
            <td>
                <%= flexibility.name-%>
            </td>
            <td><%= link_to 'Show', flexibility, class: 'btn btn-info btn-sm' if can? :show, flexibility%></td>
            <td><%= link_to 'Edit', edit_flexibility_path(flexibility), class: 'btn btn-warning btn-sm' if can? :update, flexibility %></td>
            <td><%= link_to 'Destroy', flexibility, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' if can? :destroy, flexibility %></td>
          </tr>
          <% end %>
          </tbody>
        </table>
        <%= will_paginate @collection, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
        <br>
        <%= link_to 'New Flexibility', new_flexibility_path, class: 'btn btn-primary btn-sm' if can? :create, Flexibility %>
      </div>
      <div class="card-footer small text-muted">
      </div>
    </div>
  </div>
</div>


