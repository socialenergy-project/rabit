<%= content_for :title, 'Ecc Types' %>

<div class="row">
  <div class="col-lg-12">
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-area-chart"></i>
        All Ecc Types
      </div>
      <div class="card-body">
        <table class="table table-responsive table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th><%= sortable "name", "Name" -%></th>
            <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
          <% @ecc_types.each do |ecc_type| %>
              <tr>
                <td>
                  <%= ecc_type.name -%>
                </td>
                <td><%= link_to 'Show', ecc_type, class: 'btn btn-info btn-sm' if can? :show, ecc_type %></td>
                <td><%= link_to 'Edit', edit_ecc_type_path(ecc_type), class: 'btn btn-warning btn-sm' if can? :update, ecc_type %></td>
                <td><%= link_to 'Destroy', ecc_type, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-sm' if can? :destroy, ecc_type %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
        <%= will_paginate @collection, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
        <br>
        <%= link_to 'New Ecc Type', new_ecc_type_path, class: 'btn btn-primary btn-sm' if can? :create, EccType %>
      </div>
      <div class="card-footer small text-muted">
      </div>
    </div>
  </div>
</div>


