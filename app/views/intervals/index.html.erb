<%= content_for :title, 'Intervals' %>

<div class="row">
  <div class="col-lg-12">
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-area-chart"></i>
        All Intervals
      </div>
      <div class="card-body">
        <table class="table table-responsive table-striped table-bordered table-hover">
          <thead>
          <tr>
            
            <th><%= sortable "name", "Name" %></th>
            
            <th><%= sortable "duration", "Duration" %></th>
                        <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @intervals.each do |interval| %>
          <tr>
                        <td>
              
                <%= interval.name-%>
              
            </td>
                        <td>
              
                <%= interval.duration-%>
              
            </td>
                        <td><%= link_to 'Show', interval, class: 'btn btn-info btn-sm' if can? :show, interval%></td>
            <td><%= link_to 'Edit', edit_interval_path(interval), class: 'btn btn-warning btn-sm' if can? :update, interval %></td>
            <td><%= link_to 'Destroy', interval, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' if can? :destroy, interval %></td>
          </tr>
          <% end %>
          </tbody>
        </table>
        <%= will_paginate @collection, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
        <br>
        <%= link_to 'New Interval', new_interval_path, class: 'btn btn-primary btn-sm' if can? :create, Interval %>
      </div>
      <div class="card-footer small text-muted">
      </div>
    </div>
  </div>
</div>


