<%= content_for :title, 'Dr Events' %>

<div class="row">
  <div class="col-lg-12">
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-area-chart"></i>
        All Dr Events
      </div>
      <div class="card-body">
        <table class="table table-responsive table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th><%= sortable "name", "Name" -%></th>
            <th><%= sortable "starttime", "Starttime" -%></th>
            <th><%= sortable "interval_id", "Interval" -%></th>
            <th><%= sortable "price", "Price" -%></th>
            <th><%= sortable "state", "State" -%></th>
            <th><%= sortable "dr_type", "Dr Type" -%></th>
            <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
          <% @dr_events.each do |dr_event| %>
          <tr>
            <td>
                <%= dr_event.name-%>
            </td>
            <td>
                <%= dr_event.starttime-%>
            </td>
            <td>
                <%= link_to dr_event.interval&.name, interval_path(dr_event.interval) if dr_event.interval -%>
            </td>
            <td>
                <%= dr_event.price-%>
            </td>
            <td>
                <%= dr_event.state-%>
            </td>
            <td>
                <%= dr_event.dr_type-%>
            </td>
            <td><%= link_to 'Show', dr_event, class: 'btn btn-info btn-sm' if can? :show, dr_event%></td>
            <td><%= link_to 'Edit', edit_dr_event_path(dr_event), class: 'btn btn-warning btn-sm' if can? :update, dr_event %></td>
            <td><%= link_to 'Destroy', dr_event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' if can? :destroy, dr_event %></td>
          </tr>
          <% end %>
          </tbody>
        </table>
        <%= will_paginate @collection, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
        <br>
        <%= link_to 'New Dr Event', new_dr_event_path, class: 'btn btn-primary btn-sm' if can? :create, DrEvent %>
      </div>
      <div class="card-footer small text-muted">
      </div>
    </div>
  </div>
</div>


