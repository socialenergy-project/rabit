<%= content_for :title, 'Consumer Categories' %>

<div class="row">
  <div class="col-lg-12">
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-area-chart"></i>
        All Consumer Categories
      </div>
      <div class="card-body">
        <table class="table table-responsive table-striped table-bordered table-hover">
          <thead>
          <tr>
            
            <th><%= sortable "name", "Name" %></th>
            
            <th><%= sortable "description", "Description" %></th>
            
            <th><%= sortable "reference_year", "Reference year" %></th>
                        <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <% @consumer_categories.each do |consumer_category| %>
          <tr>
                        <td>
              
                <%= consumer_category.name-%>
              
            </td>
                        <td>
              
                <%= consumer_category.description-%>
              
            </td>
                        <td>
              
                <%= consumer_category.reference_year-%>
              
            </td>
                        <td><%= link_to 'Show', consumer_category, class: 'btn btn-info btn-sm' if can? :show, consumer_category%></td>
            <td><%= link_to 'Edit', edit_consumer_category_path(consumer_category), class: 'btn btn-warning btn-sm' if can? :update, consumer_category %></td>
            <td><%= link_to 'Destroy', consumer_category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' if can? :destroy, consumer_category %></td>
          </tr>
          <% end %>
          </tbody>
        </table>
        <%= will_paginate @collection, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
        <br>
        <%= link_to 'New Consumer Category', new_consumer_category_path, class: 'btn btn-primary btn-sm' if can? :create, ConsumerCategory %>
      </div>
      <div class="card-footer small text-muted">
      </div>
    </div>
  </div>
</div>


