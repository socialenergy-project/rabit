<%= content_for :title, @recommendation_type.name || @recommendation_type.id -%>

<div class="row">
  <div class="col-lg-12">
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-area-chart"></i>
        recommendation_type properties
      </div>
      <div class="card-body">
        <p>
          <strong>Name:</strong>
          <%= @recommendation_type.name-%>
        </p>
        <p>
          <strong>Description:</strong>
          <%= @recommendation_type.description-%>
        </p>

        <%= link_to 'Edit', edit_recommendation_type_path(@recommendation_type), class: 'btn btn-warning btn-sm' if can? :edit, @recommendation_type %> |
        <%= link_to 'All Recommendation Types', recommendation_types_path, class: 'btn btn-info btn-sm' %>

      </div>
      <div class="card-footer small text-muted">
      </div>
    </div>
  </div>
</div>

