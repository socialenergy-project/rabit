<%= content_for :title, 'Editing Message' %>

<div class="row">
  <div class="col-lg-12">
    <div class="card mb-3">
      <div class="card-header">
        <i class="fa fa-area-chart"></i>
        message properties
      </div>
      <div class="card-body">
        <%= render 'form', message: @message %>

        <%= link_to 'Show', @message, class: 'btn btn-info btn-sm' %> |
        <%= link_to 'All Messages', messages_path, class: 'btn btn-info btn-sm' %>
      </div>
      <div class="card-footer small text-muted">
      </div>
    </div>
  </div>
</div>
